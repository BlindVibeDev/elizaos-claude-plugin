{
  "name": "@elizaos/plugin-claude-code",
  "version": "1.0.0",
  "description": "ElizaOS plugin for integrating Claude Code - AI-powered coding assistant that delegates coding tasks to Claude directly from the terminal",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "elizaos",
    "plugin",
    "claude",
    "claude-code",
    "ai",
    "coding",
    "assistant",
    "anthropic"
  ],
  "author": "ElizaOS Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos-plugins/plugin-claude-code"
  },
  "dependencies": {
    "@ai16z/eliza": "latest",
    "child_process": "^1.0.2",
    "fs-extra": "^11.2.0",
    "tmp": "^0.2.1",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "@types/tmp": "^0.2.6",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ANTHROPIC_API_KEY": {
        "type": "string",
        "description": "Anthropic API key for Claude Code authentication"
      },
      "CLAUDE_CODE_WORKSPACE": {
        "type": "string",
        "description": "Default workspace directory for Claude Code operations",
        "optional": true
      },
      "CLAUDE_CODE_MODEL": {
        "type": "string",
        "description": "Claude model to use (default: claude-3-5-sonnet-20241022)",
        "optional": true
      },
      "CLAUDE_CODE_MAX_TOKENS": {
        "type": "number",
        "description": "Maximum tokens for Claude responses (default: 4096)",
        "optional": true
      }
    }
  }
}
